<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>HttpProxy</servlet-name>
        <servlet-class>main.HttpProxyServlet</servlet-class>
        <init-param>
            <param-name>host</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>port</param-name>
            <param-value>8070</param-value>
        </init-param>
        <init-param>
            <param-name>subpath</param-name>
            <param-value>/data</param-value>
        </init-param>
    </servlet>
    <servlet>    
        <servlet-name>dbServlet</servlet-name>
        <servlet-class>database.DBServlet</servlet-class>  
    </servlet>          
    <servlet-mapping>
        <servlet-name>HttpProxy</servlet-name>
        <url-pattern>/data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dbServlet</servlet-name>
        <url-pattern>/dbase</url-pattern>
    </servlet-mapping>    
    <resource-ref>
        <description>postgreSQL Datasource example</description>
        <res-ref-name>trend</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
